{
  "name": "next-js-boilerplate",
  "version": "1.0.0",
  "author": "Ixartz (https://github.com/ixartz)",
  "scripts": {
    "dev:spotlight": "spotlight-sidecar",
    "dev:next": "next dev",
    "dev": "run-p dev:*",
    "build": "next build",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit --pretty",
    "test": "vitest run",
    "commit": "cz",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx database/migrate.ts",
    "db:drop": "tsx database/drop-tables.ts",
    "db:reset": "npm run db:drop && npm run db:migrate",
    "db:studio": "drizzle-kit studio",
    "prepare": "husky"
  },
  "dependencies": {
    "@clerk/localizations": "^2.8.1",
    "@clerk/nextjs": "^5.7.5",
    "@deepgram/sdk": "^3.8.0",
    "@electric-sql/pglite": "^0.2.5",
    "@hookform/resolvers": "^3.9.0",
    "@logtail/pino": "^0.5.0",
    "@neondatabase/serverless": "^1.0.0",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-collapsible": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-scroll-area": "^1.2.6",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.7",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@spotlightjs/spotlight": "^2.3.2",
    "@t3-oss/env-nextjs": "^0.11.1",
    "bufferutil": "^4.0.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.43.1",
    "isomorphic-dompurify": "^2.16.0",
    "lucide-react": "^0.445.0",
    "next": "^15.3.1",
    "openai": "^4.94.0",
    "pg": "^8.12.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "postgres": "^3.4.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.53.0",
    "react-markdown": "^9.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-retry-promise": "^0.8.1",
    "utf-8-validate": "^5.0.10",
    "uuid": "^11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@commitlint/cz-commitlint": "^19.4.0",
    "@eslint-react/eslint-plugin": "^1.14.0",
    "@jest/globals": "^29.7.0",
    "@next/bundle-analyzer": "^14.2.9",
    "@next/eslint-plugin-next": "^14.2.9",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.5.4",
    "@types/pg": "^8.11.8",
    "@types/react": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/expect": "^2.0.5",
    "autoprefixer": "^10.4.20",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.31.0",
    "eslint": "^8.57.0",
    "eslint-plugin-format": "^0.1.2",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-testing-library": "^6.5.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.5",
    "jiti": "^1.21.6",
    "jsdom": "^25.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.45",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.1.0",
    "start-server-and-test": "^2.0.7",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.19.4",
    "typescript": "^5.6.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^3.1.2",
    "vitest-fail-on-console": "^0.7.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
