{
  "name": "clinicpro-workspace",
  "version": "1.0.0",
  "author": "Ixartz (https://github.com/ixartz)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:saas": "npm run dev --workspace=clinicpro-saas",
    "dev:demo": "npm run dev --workspace=clinicpro-demo",
    "build": "npm run build --workspaces",
    "build:saas": "npm run build --workspace=clinicpro-saas",
    "build:demo": "npm run build --workspace=clinicpro-demo",
    "start:saas": "npm run start --workspace=clinicpro-saas",
    "start:demo": "npm run start --workspace=clinicpro-demo",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "check-types": "npm run check-types --workspaces",
    "test": "vitest run",
    "clean": "rimraf .next out coverage && npm run clean --workspaces",
    "commit": "cz",
    "prepare": "husky",
    "db:generate": "npm run db:generate --workspace=clinicpro-saas",
    "db:migrate": "npm run db:migrate --workspace=clinicpro-saas",
    "db:push": "npm run db:push --workspace=clinicpro-saas",
    "db:drop": "npm run db:drop --workspace=clinicpro-saas",
    "db:reset": "npm run db:reset --workspace=clinicpro-saas",
    "db:studio": "npm run db:studio --workspace=clinicpro-saas",
    "db:check": "npm run db:check --workspace=clinicpro-saas",
    "db:seed-templates": "npm run db:seed-templates --workspace=clinicpro-saas"
  },
  "dependencies": {},
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@commitlint/cz-commitlint": "^19.4.0",
    "@eslint-react/eslint-plugin": "^1.14.0",
    "@jest/globals": "^29.7.0",
    "@next/bundle-analyzer": "^15.3.1",
    "@next/eslint-plugin-next": "^15.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stagewise-plugins/react": "^0.4.9",
    "@stagewise/toolbar-next": "^0.4.9",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.11.8",
    "@types/react": "^19.1.2",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/expect": "^3.1.2",
    "autoprefixer": "^10.4.20",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^8.57.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.5",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.45",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.1.0",
    "start-server-and-test": "^2.0.7",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.4",
    "typescript": "^5.6.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^3.1.2",
    "vitest-fail-on-console": "^0.7.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
