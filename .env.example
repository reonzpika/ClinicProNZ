# n8n + content feed env template
# Timezone for scheduling
N8N_TIMEZONE=Pacific/Auckland

# LLM provider
OPENAI_API_KEY=

# SERP provider (free Serper.dev)
SERPER_API_KEY=
SERPER_API_URL=https://google.serper.dev/search
# Optional: SerpAPI (paid) fallback
SERPAPI_KEY=
SERPAPI_URL=https://serpapi.com/search.json

# Gmail IMAP for Google Alerts (use OAuth or app password)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=
IMAP_PASSWORD=
IMAP_LABEL=ai-nz-gp-alerts

# Slack (optional for review/alerts)
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_REVIEW_CHANNEL_ID=
SLACK_SUMMARY_CHANNEL_ID=

# GitHub for JSON content commits
GITHUB_TOKEN=
GITHUB_OWNER=
GITHUB_REPO=
GITHUB_CONTENT_PATH=content/ai-for-nz-gps.json
